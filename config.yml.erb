receivers:
  otlp:
    protocols:
      grpc:
      http:
        endpoint: localhost:55681
  jaeger:
    protocols:
      grpc:
      thrift_binary:
      thrift_compact:
      thrift_http:

processors:
  batch:
    timeout: 10s

exporters:
  logging:
    logLevel: debug
  datadog/otlp:
    hostname: localhost
    env: prod
    service: drogus-dev-oltp
    version: 0.0.1

    api:
      key: <%= ENV['DATADOG_API_KEY'] %>
      site: datadoghq.eu

    tags:
      - "receiver_type:otlp"

  datadog/jaeger:
    hostname: localhost
    env: prod
    service: drogus-dev-jaeger
    version: 0.0.1

    api:
      key: <%= ENV['DATADOG_API_KEY'] %>
      site: datadoghq.eu

    tags:
      - "receiver_type:jaeger"

service:
  pipelines:
    traces/oltp:
      receivers: [otlp]
      processors: [batch]
      exporters: [logging, datadog/otlp]
    traces/jaeger:
      receivers: [jaeger]
      processors: [batch]
      exporters: [logging, datadog/jaeger]
